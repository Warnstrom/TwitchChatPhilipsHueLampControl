<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net8.0</TargetFramework>
    <RootNamespace>TwitchChatHueControls</RootNamespace>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="HueApi" Version="1.7.0" />
    <PackageReference Include="HueApi.ColorConverters" Version="1.7.1" />
    <PackageReference Include="HueApi.Entertainment" Version="1.5.1" />
    <PackageReference Include="Makaretu.Dns.Multicast" Version="0.27.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.EnvironmentVariables" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Configuration.Json" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="8.0.0" />
    <PackageReference Include="Microsoft.Extensions.Hosting" Version="8.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="Octokit" Version="13.0.1" />
    <PackageReference Include="Spectre.Console" Version="0.49.1" />
    <PackageReference Include="Spectre.Console.Json" Version="0.49.1" />
    <PackageReference Include="TwitchLib" Version="3.5.3" />
  </ItemGroup>
<ItemGroup>
  <None Update="colors.json">
    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
  </None>
  <None Update="example-appsettings.json">
    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
  </None>
</ItemGroup>
<ItemGroup>
  <ProjectReference Include="..\Updater\TwitchChatHueUpdater.csproj" />
</ItemGroup>

  <Target Name="CopyUpdaterFiles" AfterTargets="Publish">
    <Copy SourceFiles="@(UpdaterLinuxFiles)" DestinationFolder="$(PublishDir)/Updater/linux-x64/" />
    <Copy SourceFiles="@(UpdaterWindowsFiles)" DestinationFolder="$(PublishDir)/Updater/win-x64/" />
  </Target>

<ItemGroup>
  <UpdaterLinuxFiles Include="../Updater/bin/Release/net8.0/publish/TwitchChatHueUpdater.dll" />
  <UpdaterLinuxFiles Include="../Updater/bin/Release/net8.0/publish/TwitchChatHueUpdater.pdb" />
  <UpdaterLinuxFiles Include="../Updater/bin/Release/net8.0/publish/*.json" />

  <UpdaterWindowsFiles Include="../Updater/bin/Release/net8.0/publish/TwitchChatHueUpdater.dll" />
  <UpdaterWindowsFiles Include="../Updater/bin/Release/net8.0/publish/TwitchChatHueUpdater.pdb" />
  <UpdaterWindowsFiles Include="../Updater/bin/Release/net8.0/publish/*.json" />
</ItemGroup>
</Project>
